<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.yf.mapper.AdminMapper">

    <update id="updateAdminByName">
        update admin set name=#{admin.name},password=#{admin.password} where name=#{name}
    </update>

    <select id="isExist" resultType="Admin">
        select * from admin where name=#{name} and password=#{password}
    </select>

    <select id="queryAdminByName" resultType="Admin">
        select * from admin where name = #{name}
    </select>


</mapper>